<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ImagePropertiesActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Image Url"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/image_url_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter image Url"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/preview_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:backgroundTint="#3EC7DA"
        android:text="Preview"
        android:textAllCaps="false" />

    <ImageView
        android:id="@+id/image_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/dummy" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/flip_horizontal_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="#3EC7DA"
            android:text="Flip Horizontal"
            android:textAllCaps="false"
            android:textSize="10sp" />

        <ImageButton
            android:id="@+id/left_arrow_ib"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:backgroundTint="#3EC7DA"
            android:rotationX="180"
            app:srcCompat="@drawable/ic_baseline_subdirectory_arrow_left_24" />

        <ImageButton
            android:id="@+id/right_arrow_ib"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:backgroundTint="#3EC7DA"
            android:rotation="180"
            app:srcCompat="@drawable/ic_baseline_subdirectory_arrow_left_24" />

        <Button
            android:id="@+id/flip_vertical_btn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:backgroundTint="#3EC7DA"
            android:text="Flip Vertical"
            android:textAllCaps="false"
            android:textSize="10sp" />

    </LinearLayout>

</LinearLayout>